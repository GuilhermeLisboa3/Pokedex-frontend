{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "dist",
    "rootDirs": [ "src", "tests"],
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": "src",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "plugins": [{ "name": "next" } ],
    "paths": { "@/*": ["*"], "@/tests/*": ["../tests/*"]},
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": ["src","tests",".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
